@page
@model WebApp.Pages_Locations.DeleteModel

@{
    ViewData["Title"] = "Delete " + Model.Location.Name;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item Location</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Location Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Location.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

@page
@model WebApp.Pages_Jobs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Job</h1>

<h4>Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Job.JobNameId" class="control-label"></label>
                <select asp-for="Job.JobNameId" class ="form-control" asp-items="ViewBag.JobNameId">Job Name</select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-rallyId="@Model.RallyId">Back to Items</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@using System.ComponentModel
@model WebApp.Pages_Items.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Item.ItemName.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemName.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Location.Name)
        </dd>
        
        <dt class="col-sm-2">
            Current Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.CurrentQuantity)
        </dd>
        <dt class="col-sm-2">
            Optimal Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.OptimalQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Price)
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Item.Id" asp-route-rallyId="@Model.RallyId">Edit</a> |
    <a asp-page="./Index" asp-route-rallyId="@Model.RallyId">Back to Items</a>
</div>
